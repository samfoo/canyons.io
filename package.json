{
  "name": "canyons.io",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "node ./bin/www"
  },
  "dependencies": {
    "body-parser": "~1.0.0",
    "browserify": "^9.0.3",
    "cookie-parser": "~1.0.1",
    "director": "^1.2.8",
    "express": "~4.2.0",
    "jade": "^1.9.2",
    "less": "^2.4.0",
    "morgan": "~1.0.0",
    "ramda": "^0.11.0"
  },
  "scripts": {
      "client-js": "browserify client/main.js",
      "client-styles": "./node_modules/.bin/lessc styles/style.less",
      "build-client": "npm run client-js | tail +5 > public/js/canyons.io.js",
      "build-styles": "npm run client-styles | tail +5 > public/stylesheets/style.css",
      "watch-client": "fswatch -o client | xargs -n1 -I{} npm run build-client",
      "watch-styles": "fswatch -o styles | xargs -n1 -I{} npm run build-styles",
      "serve": "nodemon bin/www"
  }
}
