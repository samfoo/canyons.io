{
  "name": "canyons.io",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "client-js": "browserify src/client.js",
    "client-styles": "./node_modules/.bin/lessc styles/style.less",
    "build-client": "npm run client-js | tail +5 > public/js/canyons.io.js",
    "build-styles": "npm run client-styles | tail +5 > public/stylesheets/style.css",
    "watch-client": "fswatch -o src | xargs -n1 -I{} npm run build-client",
    "watch-styles": "fswatch -o styles | xargs -n1 -I{} npm run build-styles",
    "serve": "nodemon bin/www"
  },
  "dependencies": {
    "body-parser": "~1.0.0",
    "browserify": "^9.0.3",
    "cookie-parser": "~1.0.1",
    "director": "^1.2.8",
    "express": "~4.2.0",
    "jade": "^1.9.2",
    "less": "^2.4.0",
    "morgan": "~1.0.0",
    "ramda": "^0.11.0",
    "react": "^0.13.0",
    "revalidator": "^0.3.1"
  },
  "devDependencies": {
    "chai": "^2.1.1",
    "contextify": "^0.1.13",
    "debug": "^2.1.3",
    "jsdom": "^4.0.2",
    "mocha": "^2.2.1"
  }
}
